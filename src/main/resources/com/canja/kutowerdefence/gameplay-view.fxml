<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane xmlns="http://javafx.com/javafx/17.0.12"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.canja.kutowerdefence.ui.GamePlayView">

    <!-- CENTER: Map + Enemies -->
    <center>
        <StackPane>
            <GridPane fx:id="mapGridPane"
                      gridLinesVisible="true"
                      prefHeight="768.0"
                      prefWidth="1024.0">
                <columnConstraints>
                    <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="64.0"/>
                    <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="64.0"/>
                    <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="64.0"/>
                    <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="64.0"/>
                    <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="64.0"/>
                    <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="64.0"/>
                    <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="64.0"/>
                    <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="64.0"/>
                    <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="64.0"/>
                    <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="64.0"/>
                    <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="64.0"/>
                    <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="64.0"/>
                    <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="64.0"/>
                    <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="64.0"/>
                    <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="64.0"/>
                    <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="64.0"/>
                    <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="64.0"/>
                </columnConstraints>
                <rowConstraints>
                    <RowConstraints minHeight="10.0" prefHeight="64.0" vgrow="SOMETIMES"/>
                    <RowConstraints minHeight="10.0" prefHeight="64.0" vgrow="SOMETIMES"/>
                    <RowConstraints minHeight="10.0" prefHeight="64.0" vgrow="SOMETIMES"/>
                    <RowConstraints minHeight="10.0" prefHeight="64.0" vgrow="SOMETIMES"/>
                    <RowConstraints minHeight="10.0" prefHeight="64.0" vgrow="SOMETIMES"/>
                    <RowConstraints minHeight="10.0" prefHeight="64.0" vgrow="SOMETIMES"/>
                    <RowConstraints minHeight="10.0" prefHeight="64.0" vgrow="SOMETIMES"/>
                    <RowConstraints minHeight="10.0" prefHeight="64.0" vgrow="SOMETIMES"/>
                    <RowConstraints minHeight="10.0" prefHeight="64.0" vgrow="SOMETIMES"/>
                    <RowConstraints minHeight="10.0" prefHeight="64.0" vgrow="SOMETIMES"/>
                    <RowConstraints minHeight="10.0" prefHeight="64.0" vgrow="SOMETIMES"/>
                    <RowConstraints minHeight="10.0" prefHeight="64.0" vgrow="SOMETIMES"/>
                </rowConstraints>
            </GridPane>
            <Pane fx:id="enemyLayer" pickOnBounds="false"/>
        </StackPane>
    </center>

    <!-- RIGHT: Controls + HUD -->
    <right>
        <VBox alignment="TOP_CENTER" spacing="10" prefWidth="256.0" BorderPane.alignment="CENTER">
            <children>
                <!-- Control Buttons -->
                <Button fx:id="pauseButton"   text="Pause"/>
                <Button fx:id="restartButton" text="Restart"/>
                <Button fx:id="speedButton"   text="1x"/>
                <Button fx:id="exitButton"    text="Exit"/>

                <!-- HUD Overlay -->
                <!-- GOLD -->
                <StackPane>
                    <ImageView fx:id="goldFrame"
                               image="@../ui/images/gold_frame.png"
                               fitWidth="200" preserveRatio="true"/>
                    <HBox alignment="CENTER" spacing="8">
                        <ImageView fx:id="goldIcon"
                                   image="@../ui/images/coin_icon.png"
                                   fitHeight="24" preserveRatio="true"/>
                        <Label fx:id="goldLabel"
                               text="1230"
                               style="-fx-font-size:18px; -fx-text-fill:white;"/>
                    </HBox>
                </StackPane>

                <!-- HEALTH -->
                <StackPane>
                    <ImageView fx:id="healthFrame"
                               image="@../ui/images/health_frame.png"
                               fitWidth="200" preserveRatio="true"/>
                    <HBox alignment="CENTER" spacing="8">
                        <ImageView fx:id="healthIcon"
                                   image="@../ui/images/heart_icon.png"
                                   fitHeight="24" preserveRatio="true"/>
                        <Label fx:id="healthLabel"
                               text="10/10"
                               style="-fx-font-size:18px; -fx-text-fill:white;"/>
                    </HBox>
                </StackPane>

                <!-- WAVE -->
                <StackPane>
                    <ImageView fx:id="waveFrame"
                               image="@../ui/images/wave_frame.png"
                               fitWidth="200" preserveRatio="true"/>
                    <HBox alignment="CENTER" spacing="8">
                        <ImageView fx:id="waveIcon"
                                   image="@../ui/images/shield_icon.png"
                                   fitHeight="24" preserveRatio="true"/>
                        <Label fx:id="waveLabel"
                               text="10/25"
                               style="-fx-font-size:18px; -fx-text-fill:white;"/>
                    </HBox>
                </StackPane>
            </children>
        </VBox>
    </right>

</BorderPane>
